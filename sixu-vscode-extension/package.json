{
  "name": "sixu-vscode-extension",
  "displayName": "SiXu Language Support",
  "description": "SiXu Language Support",
  "version": "0.1.0",
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^10.0.0-next.19"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@types/vscode": "^1.99.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sixu",
        "aliases": [
          "SiXu",
          "sixu"
        ],
        "extensions": [
          ".sixu"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sixu",
        "scopeName": "source.sixu",
        "path": "./syntaxes/sixu.tmLanguage.json"
      }
    ]
  }
}
